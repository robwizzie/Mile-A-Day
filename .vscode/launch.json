{
	"version": "0.2.0",
	"configurations": [
		{
			"name": "Debug Backend (tsx)",
			"type": "node",
			"request": "launch",
			"program": "src/server.ts",
			"runtimeExecutable": "tsx",
			"cwd": "${workspaceFolder}/backend",
			"envFile": "${workspaceFolder}/backend/.env",
			"env": {
				"NODE_ENV": "development"
			},
			"console": "integratedTerminal",
			"skipFiles": ["<node_internals>/**"]
		}
	]
}
